<%-include('shared/header.ejs') %>

    <div class="container my-5 py-5">
                <div class="col-md-5 m-auto text-center">
                    <form action="/handleSignUp" method="POST">
                        <% if (exists.length != 0) { %>
                            <div class="alert alert-danger text-center">Email is already exists</div>
                            <% } %>
                        <div class="form-group">
                            <input value="<%= oldInputs?oldInputs.name:''%>" placeholder="Enter your name" type="text"
                                name="name" class="form-control" />

                            <% if (errors.find(e=>e.param === 'name')) { %>
                                <div class="alert alert-danger">Inavlid Input</div>
                                <% } %>
                        </div>
                        <div class="form-group">
                            <input value="<%= oldInputs?oldInputs.email:''%>" placeholder="Enter email" type="email"
                                name="email" class="form-control" />

                            <% if (errors.find(e=>e.param === 'email')) { %>
                                <div class="alert alert-danger">Inavlid Input</div>
                                <% } %>
                        </div>
                        <div class="form-group">
                            <input value="<%= oldInputs?oldInputs.password:''%>" placeholder="Enter you password"
                                type="password" name="password" class="form-control" />
                            <% if (errors.find(e=>e.param === 'password')) { %>
                                <div class="alert alert-danger">Inavlid Input</div>
                                <% } %>
                        </div>
                        <div class="form-group">
                            <input value="<%= oldInputs?oldInputs.confirmPassword:''%>" placeholder="confirm Password"
                                type="password" name="confirmPassword" class="form-control" />
                            <% if (errors.find(e=>e.param === 'confirmPassword')) { %>
                                <div class="alert alert-danger">Inavlid Input</div>
                                <% } %>
                        </div>
                        <button type="submit" class="btn btn-info w-100">SignUp</button>
                    </form>
                </div>
    </div>

    <%- include('shared/footer.ejs') %>